<section class="content">
  <div class="wrapper">
  <div class="page-header">
    <h3 align="center">MUA HÀNG</h3>
  </div>
<table id="example" class="display responsive nowrap" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Tình trạng</th>
      <th>Ngày đơn hàng</th>
      <th>Số đơn hàng</th>
      <th>Ngày giao hàng</th>
      <th>Nhà cung cấp</th>
      <th>Số tiền</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @purchase_orders.each do |purchase_order|%>
      <tr>
          <td><%= purchase_order.Status%></td>
          <td><%= purchase_order.tstrftime("%d-%m-%Y")%></td>
          <td><%= purchase_order.RefNo%></td>
          <td><%= purchase_order.ReceiveDate.strftime("%d-%m-%Y")%></td>
          <td><span class="text_trunc"><%= purchase_order.AccountObjectName%></span></td>
          <td><%= purchase_order.TotalAmount%></td>
          <td><%= button_to "Chi tiết", purchase_order_path(purchase_order.RefID), method: :get%></td>
      </tr>
      <%end%>
  </tbody>
</table>
</div>
</section>
