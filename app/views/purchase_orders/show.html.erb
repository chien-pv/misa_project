            <div class="main-show">
                <table style="width:90%;font-size:18px;">
                  <tr>
                    <td colspan="3">Tình trạng: <font style="color:red"><%=@purchase_order[0].Status %></font></td>
                  </tr>
                  <tr>
                    <td>Nhà cung cấp: <%=@purchase_order[0].AccountObjectName %></td>
                    <td>Địa chỉ: <%=@purchase_order[0].AccountObjectAddress %></td>
                    <td>SDT: <%=@purchase_order[0].AccountObjectTaxCode %></td>
                    <td>Email: <%= %></td>
                  </tr>
                  <tr>
                    <td>Ngày đơn hàng: <%=@purchase_order[0].RefDate.strftime("%d-%m-%Y") %></td>
