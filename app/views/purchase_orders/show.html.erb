                  </tr>
                  <tr>
                    <td>Diễn giải: <%=@purchase_order[0].JournalMemo %></td>
                    <td colspan="3">Số tiền: <%=@purchase_order[0].TotalAmount %></td>
                  </tr>
                  <tr>
                    <td>Tổng khối lượng: xxx</td>
                    <td colspan="3">Tổng thể tích: xxx</td>
                  </tr>
                </table>
                
              </div>
          </div>
      </div>


<div class="panel panel-default login-form">
  <div class="row-main panel-body">
    <% @detail_pus.each do |detail_pu|%>

    <div class="panel panel-default login-form">
          <div class="panel-heading">
            <h3 class="panel-title">
              <b style="font-size:16px;">Mã hàng: <%= detail_pu.InventoryItemID%></b>
            </h3>
          </div>
          <div class="panel-body">
            <div class="row-main-solid">
        <table style="width:90%;font-size:15px;">
          <tr>
            <td colspan="3">Tên hàng: <%= detail_pu.Description%></td>
          </tr>
          <tr>
            <td>Số lượng: <%= detail_pu.Quantity%></td>
            <td colspan="3">
              Đơn vị tính:
              <%= select("post", "person_id", @Units.collect {|p| [ p.UnitName, p.UnitID ] }, { selected: detail_pu.UnitID}, class: "form-control")%>
            </td>
          </tr>
          <tr>
            <td>Số lượng nhận: <input type="text" value="<%= detail_pu.QuantityReceipt%>", class= "form-control"/></td>
            <td>Đơn giá: <input type="text" value="<%= detail_pu.UnitPrice%>" , class= "form-control"/></td>
            <td colspan="2">Thành tiền: <%= detail_pu.Amount%></td>
          </tr>
          <tr>
            <td>Tỉ lệ chiết khấu: <input type="text" value="<%= detail_pu.DiscountRate%>", class= "form-control"/></td>
            <td>Tiền chiết khấu: <input type="text" value="<%= detail_pu.DiscountAmount%>", class= "form-control pull-left"/></td>
            <td>Tỉ lệ GTGT: <input type="text" value="<%= detail_pu.VATRate%>", class= "form-control"/></td>
            <td>Tiền GTGT: <input type="text" value="<%= detail_pu.VATAmount%>", class= "form-control"/></td>
          </tr>
          <tr>
            <td>Thể tích: xxx</td>
            <td colspan="3">Khối lượng: xxx</td>
          </tr>
        </table>
      </div>
          </div>
      </div>
      <% end %>
  </div>
</div>
      
  
